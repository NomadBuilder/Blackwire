# BlackWire - Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=blackwire_user
POSTGRES_PASSWORD=blackwire123password
POSTGRES_DB=blackwire

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=blackwire123password

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=dev-secret-key-change-in-production
PORT=5002

# API Keys
# Get your keys from:
# - ipapi.com: https://ipapi.com/api-key/
# - VirusTotal: https://www.virustotal.com/gui/join-us
# - numlookupapi.com: https://numlookupapi.com/
# - Etherscan: https://etherscan.io/apis

IPAPI_KEY=your_ipapi_key_here
VIRUSTOTAL_API_KEY=your_virustotal_key_here
NUMLOOKUP_API_KEY=your_numlookup_key_here
ETHERSCAN_API_KEY=your_etherscan_key_here

# Rate Limiting
ENRICHMENT_RATE_LIMIT=10

# Caching
CACHE_ENABLED=true
CACHE_TTL_HOURS=24

# Request Timeouts
API_TIMEOUT_SECONDS=10
DB_CONNECTION_TIMEOUT=5

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/blackwire.log

# Retry Configuration
MAX_RETRIES=3
RETRY_BASE_DELAY=1.0
